page
{
  width:100%;
  height:100%;
}

/* 提问总体布局样式 */
.question-search
{
  display: flex;
  justify-content:center;
  align-items:center;
  width:100%;
  height:150rpx;
}

/* 提问列表布局样式 */
.question-definite
{
  display: flex;
  flex-direction: column;
  width:100%;
  border:1rpx solid red;
  margin-top:5%;
}

.quest-def-frame
{
  display: flex;
  justify-content:space-between;
  width:80%;
 
  margin:0 auto;
}

/* 提问者头像 */
.quest-fra-logo
{
  width:90rpx;
  height:90rpx;
  /* border:1rpx solid #000; */
  border-radius:50%;
}

 .quest-fra-logo image
{
  width:90rpx;
  height:90rpx;
} 


.quest-fra-description
{
  width:80%;
  line-height: 35rpx;
}

/* 提问标题 */
.quest-des-title
{
    border:1rpx olid green;
}

.quest-des-title text{
      font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size:27rpx;
}

/* 提问内容 */
.quest-dex-content
{
  border:1rpx solid orange;
}

.quest-dex-content text{
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size:21rpx;
  color:#b9b9b9;
}

.in-hd-search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:70%;
  height:60rpx;
  background-color:whitesmoke;
  margin-top: 5%;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;

}


.in-hd-search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

.in-hd-search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right: 20rpx;
}


