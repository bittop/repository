page
{
  width: 100%;
  height: 100%;
}

/* 顶部样式 */
.index-header
{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center; 
  width:100%;
  height:470rpx;
  background:#00a2f6;
  margin-bottom: 6%;
}

/* 用户头像样式 */
.in-hd-logo
{
  width:150rpx;
  height:150rpx;
  background: #b9b9b9;
  border-radius:50%;
}


.in-hd-logo image
{
  width:150rpx;
  height:150rpx;
}


/* 问题列表样式 */
.index-problem
{
  display: flex;
  flex-direction:column;
  align-items: center;
  width:100%;
}

.in-pb-content
{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  width:80%;
  margin-bottom:6%;
}

.in-pb-border{
  border:1rpx solid red;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 课程名样式 */
.in-pb-course
{
  text-align: center;
  margin-bottom: 13.5rpx;
  margin-left:2%;
}


.in-pb-course text
{
  border:2rpx solid #31C27C;
  padding:3rpx;
  font-size:18rpx;
  color:#31C27C;
}

/* 问题标题样式 */
.in-pb-con1
{
  width:70%;
  border:1rpx solid orange;
  font-family:'Microsoft YaHei';
  font-size:27rpx;
}

/* 问题内容格式 */
.in-pb-con2
{
  border:1rpx solid green;
  font-family:'Mircosoft YaHei';
  font-size:24rpx;
  color: #b9b9b9;
}


/* 搜索框样式 */
.in-hd-search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:70%;
  height:60rpx;
  background-color:whitesmoke;
  margin-top: 5%;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;

}

/* 搜索框提示文字样式 */
.in-hd-search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

/* 搜索框小图标 */
.in-hd-search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}


/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}



