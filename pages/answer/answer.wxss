/* pages/index/answer/answer.wxss */
page
{
  width:100%;
  height:100%;
}

/* 问答标题 */
.answer-topic
{
  display:flex;
  flex-direction:column;
  margin:0 auto;
  width:95%;
}

.ans-tpc-text text
{
  font-size:27rpx;
}

/* 问答图片 */
.ans-tpc-pic
{
  width:100%;
  margin-top:5%;
}

.ans-tpc-pic image
{
  width:100%;
}

/* 评论输入按钮 */
.answer-input
{
  width:95%;
  height:180rpx;
  margin:2% auto 0;
  border:1rpx solid #b9b9b9;
}

.answer-input input
{
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 27rpx;
  padding-left: 10rpx;
}

/* 评论具体列表 */
.answer-frame
{
  width:95%;
  margin:0 auto;
}

.ans-fra-hotcomments text
{
  font-size: 32rpx;
  font-weight:bold;
}

.ans-fra-question
{
  display: flex;
  justify-content:space-between;
  margin-top:8%;
}

/* 提问者头像 */
.ans-que-logo
{
  width:90rpx;
  height:90rpx;
  border:1rpx solid #b9b9b9;
  border-radius:50%;
}

.ans-que-logo image
{
  width:90rpx;
  height:90rpx;
}

.ans-que-text
{
  display:flex;
  flex-direction: column;
  justify-content:center;
  width:80%;
  line-height:40rpx;
}

/* 提问标题 */
.ans-txt-title
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight:bold;
}

/* 回贴内容 */
.ans-txt-que
{
  font-size:21rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color:#b9b9b9;
}
