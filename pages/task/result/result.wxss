/* pages/pratice/result/result.wxss */
/*结果页面*/
page
{
    width: 100%;
    height: 100%;
}
.pd-swiper-result
{
    width: 100%;
    height: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}
/*顶部view*/
.pd-result-top
{
    width: 100%;
    height: 30%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: center;
    overflow: auto;
    margin-bottom: 5%;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}
/*进度圆圈*/
.co-re-tagcirl
{
    width: 250rpx;
    height: 250rpx;
    border: 1rpx solid #00a2F6;
    border-radius: 250rpx;
    overflow: hidden;
    position: relative;
}
/**
* 水球填充高度主控
* 默认 10%
* 支持 0%~100% 
* 为计算方便，变换calc()的第二个值即为需要的值
* 即第二个值越大，水球越满，反之亦然
* 动画后面再加吧，大半夜的好累
* 动画变量有问题，稍后再修改吧，真心困了
*/
:root
{
    /*--waterheight:80%;*/
}
.__cirl_view
{
    position: relative;
    top: calc(100% - var(--waterheight));
    animation: increase 2s ease-in-out 1;
}
@keyframes increase{
    0%{top: calc(100% - 10%);}
    100%{top: calc(100% - var(--waterheight));}
}
.__cirl_view
text
{
    display: inline-block;
    position: absolute;
    left: 35%;
}
/*左侧近景球mask*/
.co-re-tagcirl
.__cirl_1
{
    width: 320rpx;
    height: 320rpx;
    background: #00a2F6;
    border-radius: 320rpx;
    position: absolute;
    top: 10%;
    left: -30%;
}
/*中景球mask*/
.co-re-tagcirl
.__cirl_2
{
    width: 300rpx;
    height: 300rpx;
    background: rgba(0, 162, 246, 0.7);
    border-radius: 300rpx;
    position: absolute;
    top: 10%;
    left: 0%;
}
/*远景球mask*/
.co-re-tagcirl
.__cirl_3
{
    width: 300rpx;
    height: 300rpx;
    background: rgba(0, 162, 246, 0.4);
    border-radius: 300rpx;
    position: absolute;
    top: 10%;
    left: 30%;
}
/*右侧近景球mask*/
.co-re-tagcirl
.__cirl_4
{
    width: 300rpx;
    height: 300rpx;
    background: rgba(0, 162, 246, 1);
    border-radius: 300rpx;
    position: absolute;
