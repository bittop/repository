/* pages/pratice/pratice.wxss */
page
{
    width: 100%;
    height: 100%;
    background: #f0eff5;
}
.p-container
{
    width: 100%;
    height: inherit;
}

/* 练习题标题 */
.p-co-title
{
    width: 94%;
    height: 8%;
    padding: 0 3%;
    margin: 0 auto;
    color: #505050;
    font-size: 32rpx;
    border-bottom: 1rpx solid #ECECEC;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    background: #FFFFFF;
    position: fixed;
}

.p-co-list
{
    width: 100%;
    padding: 12% 0 0 0;
}
.co-list-item
{
    width: 94%;
    height: 530rpx;
    margin: 3% auto;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #ECECEC;
    border-radius: 15rpx;
    background: #FFFFFF;
    box-shadow: 0 0 20rpx rgba(150, 150, 150, 0.1);
}

/* 练习题图像 */
.list-item-image
{
    width: 100%;
    height: 67%;
    border-radius: 15rpx;
}
.list-item-image
image
{
    width: 100%;
    border-top-right-radius: 15rpx;
    border-top-left-radius: 15rpx;
}

/* 练习题标题 */
.list-item-title
{
    width: 94%;
    height: 33%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: flex-start;
}
.list-item-title
text:first-child
{
    font-size: 32rpx;
    color: #505050;
}
.list-item-title
text:last-child
{
    font-size: 28rpx;
    color: #808080;
}
