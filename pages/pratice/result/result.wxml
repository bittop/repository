<!-- pages/pratice/result/result.wxml -->
<view class="pd-swiper-result">
    <!--顶部概览区域-->
    <view class="pd-result-top">
        <!--水球圆圈-->
        <view class="co-re-tagcirl">
            <view class='__cirl_view' 
            style="--waterheight:{{elements.waterCirlProgress}}">
                <view class='__cirl_1'></view>
                <view class='__cirl_2'></view>
                <view class='__cirl_3'></view>
                <view class='__cirl_4'></view>
                <text>{{elements.waterCirlProgress}}</text>
            </view>
        </view>
        <!--信息条-->
        <view class="co-re-tagbar bar-flex-control">
            <view class="re-de-left bar-flex-control">
                <image src="{{elements.icon.time}}"></image>
                <text>{{subject.elements.timeTag}}</text>
            </view>
            <view class="re-de-middle bar-flex-control">
                <text>{{elements.trueText}} {{elements.trueTag}} | {{elements.falseText}} {{elements.falseTag}}</text>
            </view>
            <view class="re-de-right bar-flex-control">
                <image src="{{elements.icon.scrol}}"></image>
                <text>{{elements.scrolText}}{{subject.elements.scrolTag}} {{elements.trueTag}}</text>
            </view>
        </view>
    </view>
    <!-- 选项区域 -->
    <view class="pd-result-body">
        <view class="re-bo-se_block" wx:for="{{subject.select}}" wx:for-index="subAnsIndex" wx:for-item="subAnsItem">
            <view class="re-bo-selected" style="border:{{subject.subResult[subAnsIndex]? '1rpx solid #002af6': '1rpx solid red'}}">{{subAnsIndex+1}}</view>
        </view>
    </view>
    <!-- 继续按钮 -->
    <view class="pd-result-continue" bindtap="bindFalseOptAnaly">
        <!--查看解析-->
        <text>{{elements.continueText[0]}}</text>
        <!--
        --  <view></view>
        --  <text bindtap="bindAllAnaly">{{elements.continueText[1]}}</text>
        --  <view></view>
        --  <text bindtap="bindBacktoIndex">{{elements.continueText[2]}}</text>
        -->
    </view>
</view>