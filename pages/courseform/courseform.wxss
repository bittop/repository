.courseForm-frame
{
  width:90%;
  height:600rpx;
  border-radius:10rpx;
  margin:10% auto;
  display:flex;
  flex-direction: column;
  box-shadow: 0 10rpx 30rpx 5rpx #c1c1c1;
}

.courseForm-header
{
  width:100%;
  height:100rpx;
  background:#00a2f6;
  border-radius:10rpx 10rpx 0 0;
}

/* 输入框样式 */
.courseForm-form input
{
  width:90%;
  height:80rpx;
  border-radius:3rpx;
  border:1rpx solid #c1c1c1;
  margin:30rpx auto;
  font-size:32rpx;
  padding-left:20rpx;  
}

/* 按钮 */
.btn
{
  display:flex;
  justify-content:space-around;
  text-align: center;
}

/* 提交按钮 */
.btnSubmit
{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  background:#00a2f6;
  line-height:100rpx;
}

.btnSubmit text
{
  color:white;
  font-family:'Microsoft Yahei';
  font-size:32rpx;
}

/* 重置按钮 */
.btnReset
{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  background:#00a2f6;
  line-height:100rpx;
}


.btnReset text
{
  color:white;
  font-family:'Microsoft Yahei';
  font-size:32rpx;
}